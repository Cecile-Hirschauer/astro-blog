---
import MainLayout from "../../../layouts/MainLayout.astro";
import ArticleCard from "../../../components/ArticleCard.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { capitalize } from "../../../utils";

// Récupérer le tag depuis les paramètres d'URL
const { tag } = Astro.params;

// Si le tag n'est pas défini, rediriger ou afficher une page d'erreur personnalisée
/* if (!tag) {
  throw new Error("Tag is required");
} */

// Récupérer tous les articles du blog
const allBlogArticles: CollectionEntry<"blog">[] = (
  await getCollection("blog")
).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Filtrer les articles qui contiennent le tag spécifié
const tagArticles = allBlogArticles.filter((article) =>
  article.data.tags.includes(tag)
);
console.log("tagArticles: ", tagArticles);
console.log("tag:", tag);
---

<MainLayout>
  <a
    href="/articles"
    class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
    >Back To Articles</a
  >
  <h1 class="text-2xl pb-3">#</h1>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {tagArticles.map((article) => <ArticleCard article={article} />)}
  </div>
</MainLayout>
